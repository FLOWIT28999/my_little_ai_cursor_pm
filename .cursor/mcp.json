{
	"mcpServers": {
		"context7": {
      		"command": "npx",
      		"args": ["-y", "@upstash/context7-mcp@latest"]
    },

    	"sequential-thinking": {
      		"command": "npx",
      		"args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },

    	"playwright": {
      		"command": "npx",
      		"args": ["-y", "@playwright/mcp"]
    },

		"perplexity-mcp": {
			"env": {
				"PERPLEXITY_API_KEY": "YOUR_API_KEY_HERE",
				"PERPLEXITY_MODEL": "sonar"
				},
			"command": "uvx",
			"args": [
				"perplexity-mcp"
			]
		}
			
		}
}



